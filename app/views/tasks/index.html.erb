<h1>My tasks:</h1>

<% @tasks.each do |task| %>
<h2> <%= link_to task.title, task_path(task) %></h2>
<p><%= task.completed %></p>
<%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
      <%= link_to "Edit", edit_task_path(task) %>
<% end %>


<p>-------------------</p>
<p>
<%= link_to "Add new task", new_task_path %>
</p>
